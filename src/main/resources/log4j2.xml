<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>

<!-- Log4j 2.x 配置文件。每30秒检查和应用配置文件的更新； -->
<Configuration status="warn" monitorInterval="30" strict="true"	schema="Log4J-V2.2.xsd">
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT"> <!-- 利用System.out或System.err输出到控制台 -->
			<!-- 级别 -->
			<ThresholdFilter level="trace" onMatch="ACCEPT" onMismatch="DENY" />
			<PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
		</Console>
		
		<!-- 输出到文件，fileName：目标路径和文件名；filePattern：文件分割命名规则，zip file folder and file name pattern -->	
		<RollingFile name="RollingFile" fileName="logs/xjj.log"	filePattern="logs/$${date:yyyy-MM}/xjj-%d{yyyy-MM-dd}-%i.log.gz">
			<PatternLayout>
				<Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
			</PatternLayout>
			<Policies> <!-- 文件分割规则 -->
				<OnStartupTriggeringPolicy />
				<TimeBasedTriggeringPolicy />
				<SizeBasedTriggeringPolicy size="100 KB" />
			</Policies>
		</RollingFile>
	</Appenders>

	<Loggers>
		<Root level="warn"> <!-- 全局配置 -->
			<AppenderRef ref="Console" />
			<AppenderRef ref="RollingFile"/>
		</Root>

		<!-- 为某些包/类配置特别的Log级别 -->
		<Logger name="com.xjj" level="debug" additivity="false">
			<AppenderRef ref="Console" />
		</Logger>

		<Logger name="com.xjj.dao" level="trace" additivity="false">
			<AppenderRef ref="Console" />
		</Logger>
				
		<Logger name="org.springframework.cache" level="error" additivity="false">
			<AppenderRef ref="Console" />
		</Logger>
	</Loggers>
</Configuration>